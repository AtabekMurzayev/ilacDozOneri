<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".sonucActivity"
    tools:visibility="visible">


    <TextView
        android:id="@+id/txtEnfazla"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="17dp"
        android:text="En Fazla ml:"
        android:textColor="#E64A3E"
        app:layout_constraintBottom_toTopOf="@+id/txtView_nasilKullanilir"
        app:layout_constraintEnd_toStartOf="@+id/txtEnFazla"
        app:layout_constraintStart_toEndOf="@+id/txt_Onerilen"
        app:layout_constraintTop_toBottomOf="@+id/txtView_ilac" />

    <ImageView
        android:id="@+id/myImageView1"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/img_1"
        app:layout_constraintBottom_toTopOf="@+id/txtEnFazla"
        app:layout_constraintEnd_toStartOf="@+id/txtView_kg"
        app:layout_constraintStart_toEndOf="@+id/txtView_ilac"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ilac"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/img"
        app:layout_constraintBottom_toTopOf="@+id/txtView_nasilKullanilir"
        app:layout_constraintEnd_toStartOf="@+id/txtView_ilac"
        app:layout_constraintStart_toEndOf="@+id/txtView_Ates"
        app:layout_constraintTop_toBottomOf="@+id/txt_sonuc"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/myImageView"

        android:layout_width="20dp"

        android:layout_height="45dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/fire"
        app:layout_constraintBottom_toTopOf="@+id/txtOnerilen"
        app:layout_constraintEnd_toStartOf="@+id/txtView_Ates"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="40dp"


        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="60dp"
        android:background="?attr/actionModeCloseDrawable"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <ImageView
        android:id="@+id/btn_exit"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="100dp"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:backgroundTint="@color/firered"
        app:layout_constraintBottom_toTopOf="@+id/edt_Kilo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        tools:ignore="UnknownIdInLayout" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="hekimim yanında"
        android:textColor="#0000FF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="236dp"
        android:layout_height="29dp"
        android:text="Ateş Düşürücü Asistan"
        android:textColor="#E81A5B"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/btn_exit"
        app:layout_constraintStart_toEndOf="@+id/btn_back"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="UnknownIdInLayout" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:text="Yüksek ateşin normal seviyelere daha hızlı düşmesi için, aynı zamanda ilaç dışı yöntemlerle de çocuğunuzun ateşini düşürmeye çalışın."
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewSayac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView_nasilKullanilir"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSayac"
        android:layout_width="227dp"
        android:layout_height="48dp"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="92dp"
        android:onClick="btnSayaciBaslat"
        android:text="Sayacı Başlat"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewSayac"
        android:layout_width="197dp"
        android:layout_height="30dp"
        android:layout_marginStart="102dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="10dp"
        android:text="Kalan Saniye:"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSayac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="68dp"
        android:src="@drawable/img_3"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/txtView_nasilKullanilir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOnerilen"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtView_nasilKullanilir"
        android:layout_width="190dp"
        android:layout_height="210dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="28dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/txtEnfazla"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtView_Ates"
        android:layout_width="19dp"
        android:layout_height="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/txtOnerilen"
        app:layout_constraintEnd_toStartOf="@+id/ilac"
        app:layout_constraintStart_toEndOf="@+id/myImageView"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtView_ilac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:text="Parol Plus"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtEnfazla"
        app:layout_constraintEnd_toStartOf="@+id/myImageView1"
        app:layout_constraintStart_toEndOf="@+id/ilac"
        app:layout_constraintTop_toBottomOf="@+id/txt_sonuc"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtView_kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="505dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/myImageView1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_sonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="182dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="5dp"
        android:text="SONUÇ"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ilac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/txtOnerilen"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:text="Önerilen ml:"
        android:textColor="#18D520"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/txt_Onerilen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myImageView" />

    <TextView
        android:id="@+id/txt_Onerilen"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="150dp"
        android:text="      "
        android:textColor="#3F51B5"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/txtEnfazla"
        app:layout_constraintStart_toEndOf="@+id/txtOnerilen"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtEnFazla"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="50dp"
        android:text="      "
        android:textColor="#3F51B5"
        app:layout_constraintBottom_toTopOf="@+id/txtView_nasilKullanilir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtEnfazla"
        app:layout_constraintTop_toBottomOf="@+id/myImageView1"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>


